{
    "name": "django-mako-plus",
    "version": "1.0.0",
    "description": "Django Mako Plus helper script",
    "main": "django_mako_plus/webroot/dmp-common.src.js",
    "directories": {
        "doc": "docs"
    },
    "scripts": {
        "babel": "./node_modules/.bin/babel ./django_mako_plus/webroot/dmp-common.src.js --out-file ./django_mako_plus/webroot/dmp-common.js",
        "watch": "./node_modules/.bin/webpack --mode development --watch",
        "build": "./node_modules/.bin/webpack --mode development && ./node_modules/.bin/webpack --mode production"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/doconix/django-mako-plus.git"
    },
    "author": "Conan Albrecht",
    "license": "Apache-2.0",
    "bugs": {
        "url": "https://github.com/doconix/django-mako-plus/issues"
    },
    "homepage": "https://github.com/doconix/django-mako-plus#readme",
    "dependencies": {
        "@babel/polyfill": "^7.2.5"
    },
    "devDependencies": {
        "@babel/cli": "^7.2.3",
        "@babel/core": "^7.2.2",
        "@babel/preset-env": "^7.3.1",
        "babel-loader": "^8.0.5",
        "webpack": "^4.29.2",
        "webpack-cli": "^3.2.3"
    },
    "babel": {
        "sourceMaps": "inline",
        "presets": [
            [
                "@babel/env",
                {
                    "modules": false,
                    "loose": true,
                    "targets": {
                        "chrome": "58",
                        "ie": "9"
                    },
                    "useBuiltIns": "usage"
                }
            ]
        ]
    }
}
